{
  "name": "@smilecat2026/hook-manager",
  "version": "1.0.0",
  "description": "Universal hook manager for Claude Code - manage all lifecycle hooks via CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hookmanager": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "release": "npm run build && npm publish"
  },
  "keywords": [
    "claude-code",
    "hooks",
    "lifecycle",
    "cli",
    "typescript",
    "hook-manager"
  ],
  "author": "HookManager Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/hook-manager.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/hook-manager/issues"
  },
  "homepage": "https://github.com/your-org/hook-manager#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "inquirer": "^9.3.7",
    "openai": "^6.17.0",
    "ora": "^8.1.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist/**/*.{js,d.ts}",
    "README.md",
    "README_ZH.md",
    "LICENSE"
  ]
}
